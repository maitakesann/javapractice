<div class="post-body text-center py-5">
  <%= attachment_image_tag @post_image, :image %>
  <p class="pt-3">ショップ名：<%= @post_image.shop_name %></p>
  <p>説明：<%= @post_image.caption %></p>
  <p>ユーザーネーム：<%= @post_image.user.name %></p>
  <p>投稿日時：<%= @post_image.created_at.strftime('%Y/%m/%d') %></p>
  <% if @post_image.user == current_user %>
  <%= link_to "削除", post_image_path(@post_image), method: :delete %>
  <% end %>
</div>
<div class="favorite text-center">
  <%= render "favorites/favorite", post_image: @post_image %>
</div>
<div class="comments text-center">
  <%= render "post_comments/comment", post_image: @post_image, post_comment: @post_comment %>
</div>

<div>
  <%= link_to '一覧ページ' , post_images_path %>
</div>

<span class="text-center" id="back">
  <a href="#">
   TOPへ
  </a>
</span>

<script>
  $(function() {
  $('#back a').on('click',function(event){
    $('body, html').animate({
      scrollTop:0
    }, 800);
    event.preventDefault();
  });
});
</script>